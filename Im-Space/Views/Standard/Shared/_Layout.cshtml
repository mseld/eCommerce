    <title>@Html.T("StoreName")</title>
    <link rel="stylesheet" href="~/Assets/css/@ViewBag.style">
</head>
<body class="@ViewBag.direction">
    <header id="top">
        <div class="container clearfix">
            <div class="logo">
                <h1><img src="~/Assets/images/Ajlan-Bros-Logo.png" alt="Ajlan & Bros Logo"></h1>
            </div>
            <div class="hdr-left">
                <div class="lang">
                    <a href="/Home/SetLang?code=@ViewBag.langSelector&backUrl=@Request.RawUrl">@ViewBag.langSelectorView</a>
                </div>
                <div class="shopping-btn">
                    <a href="">@Html.T("Shop now") <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                </div>
                <div class="search clearfix">
                    @if (ViewBag.lang == "ar")
                            {
                            <button class="srch-btn" type="button"><i class="fa fa-search fa-flip-horizontal" aria-hidden="true"></i></button>
                            <input type="text" placeholder="ابحث" class="txt-box">
                            }
                            else
                            {
                            <input type="text" placeholder="Search" class="txt-box">
                            <button class="srch-btn" type="button"><i class="fa fa-search fa-flip-horizontal" aria-hidden="true"></i></button>
                            }
                </div>
            </div>
        </div>
    </header>
    <nav>
        <div class="container clearfix">
            <div id="nav" role="navigation">
