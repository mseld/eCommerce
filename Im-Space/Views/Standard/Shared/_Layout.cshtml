                    <li><a href="/Home/Index" class="active">@Html.T("Home")</a></li>
                    <li>
                        <a href="#" aria-haspopup="true"><i class="fa fa-angle-down" aria-hidden="true"></i> @Html.T("StoreName")</a>
                        <ul id="AjBros-menu" class="five-links">
                            <li><a href="/Pages/CompanyMessage">@Html.T("Our Message")</a></li>
                            <li><a href="/Pages/CompanyProfile">@Html.T("Company info")</a></li>
                            <li><a href="/Pages/CompanyGoals">@Html.T("Our goals")</a></li>
                            <li><a href="/Pages/Certificates">@Html.T("Certificates")</a></li>
                            <li><a href="/Pages/Partnership">@Html.T("Partnership")</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/Pages/Products" aria-haspopup="true"><i class="fa fa-angle-down" aria-hidden="true"></i> @Html.T("Products") </a>
                        <ul id="prod-menu" class="four-links">
                            <li><a href="/Pages/ProductDetails">@Html.T("Shemag")</a></li>
                            <li><a href="/Pages/ProductDetails">@Html.T("Ghotr")</a></li>
                            <li><a href="/Pages/ProductDetails">@Html.T("Thobe")</a></li>
                            <li><a href="/Pages/ProductDetails">@Html.T("Underwear")</a></li>
                        </ul>
                    </li>
                    <li><a href="#">@Html.T("Careers")</a></li>
                    <li>
                        <a href="#" aria-haspopup="true"><i class="fa fa-angle-down" aria-hidden="true"></i> @Html.T("Media centers")</a>
                        <ul id="media-menu" class="three-links">
                            <li><a href="/Pages/News">@Html.T("News")</a></li>
                            <li><a href="/Pages/Photos">@Html.T("Photos")</a></li>
                            <li><a href="/Pages/Videos">@Html.T("Videos")</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" aria-haspopup="true"><i class="fa fa-angle-down" aria-hidden="true"></i> @Html.T("Customer protection")</a>
                        <ul id="cp-menu" class="four-links">
                            <li><a href="/Pages/Distributors">@Html.T("Distributors Data")</a></li>
                            <li><a href="/Pages/CustomerInfo">@Html.T("Customer info")</a></li>
                            <li><a href="/Pages/FAQ">@Html.T("Frequently Asked Questions")</a></li>
                            <li><a href="/Pages/Comments">@Html.T("Comments")</a></li>
                        </ul>
