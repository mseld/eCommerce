    <script type="text/javascript" src="~/Assets/js/jquery.magnific-popup.min.js"></script>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?key=AIzaSyAkbEYjYjn-fV-OydgR1-qbTVbjzMN2dfM"></script>
    <script>
        function initMap() {
            $.ajax(
            {
                url: '@Url.Action("Branches", "Map", new { Area = "Admin" })',
                success: onSuccess
            });


            function onSuccess(data) {
                var locations = data.Locations;
                var uluru = { lat: 24.7241503, lng: 46.2620372 };

                var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 6,
                    center: uluru,
                    mapTypeId: 'roadmap'
                });

                for (var i = 0; i < locations.length; i++) {
                    var coordinates = locations[i];
                    var latLng = new google.maps.LatLng(coordinates.Latitude, coordinates.Longitude);
                    var marker = new google.maps.Marker({
                        position: latLng,
                        map: map
                    });
                }
            }
        }
        google.maps.event.addDomListener(window, 'load', initMap);
    </script>

    
    

